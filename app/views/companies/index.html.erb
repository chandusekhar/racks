<div class='ui-dialog ui-widget ui-widget-content ui-corner-all clearfix' style='width:95%; '>
	<div class="ui-dialog-titlebar ui-widget-header ui-corner-all ui-helper-clearfix">
		<span class='ui-dialog-title'>Companies</span>
	</div>

	<table>
	  <tr>
	    <th>Name</th>
	    <th>Address</th>
	    <th>Postal code</th>
	    <th>City</th>
	    <th>Telephone</th>
	    <th>Url</th>
	    <th>Btw nr</th>
	    <th>Comment</th>
	    <th></th>
	    <th></th>
	    <th></th>
	  </tr>

	<% @companies.each do |company| %>
	  <tr>
	    <td><%= company.name %></td>
	    <td><%= company.address %></td>
	    <td><%= company.postal_code %></td>
	    <td><%= company.city %></td>
	    <td><%= company.telephone %></td>
	    <td><%= company.url %></td>
	    <td><%= company.btw_nr %></td>
	    <td><%= company.comment %></td>
	    <td><%= link_to 'Show', company %></td>
	    <td><%= link_to 'Edit', edit_company_path(company) %></td>
	    <td><%= link_to 'Delete', company, :confirm => 'Are you sure?', :method => :delete %></td>
	  </tr>
	<% end %>
	</table>

	<br />

	<%= link_to 'Add Company', new_company_path %>
</div>

