<!DOCTYPE html>
<html>
<head>
	<title>Racks</title>
	<%= stylesheet_link_tag :all %>
	<link type="text/css" href="/stylesheets/start/jquery-ui-1.8.5.custom.css" rel="stylesheet" />
	<%= javascript_include_tag :defaults %>
	<%= csrf_meta_tag %>
</head>
<body>
	<div id="wrapper">
		<div id="header">
			<div id="menu">
				<%= link_to "Datacenter management", datacenters_path, {:class => "ui-state-default ui-corner-all"} %>
				<%= link_to "Companies", companies_path, {:class => "ui-state-default ui-corner-all"} %>

			</div>
			<div id="search">
				<%= form_tag('search_path', :method => 'get') do %>
				<%= text_field_tag :s, nil, :autocomplete => false %>
				<%= submit_tag "GO", :name => nil, :id => 'search-submit'%>
				<% end %>
			</div>
			<div id='notice'>
				<% if flash[:notice] %>
				<%= render :partial => 'shared/notice' %>
				<% end %>
			</div>
		</div>
		<div id="content">
			<%= yield %>
		</div>
		<div id="modal-form">

		</div>
	</div>
</body>
</html>
