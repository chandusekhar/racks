<%= form_for(datacenter) do |f| %>
  <% show_errors_for datacenter %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :location %><br />
    <%= f.text_field :location %>
  </div>
  <div class="field">
    <%= f.label :comment %><br />
    <%= f.text_area :comment, {:size => '90x4'} %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
